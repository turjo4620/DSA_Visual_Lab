<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: #0F172A;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsa_visual_lab.controller.visualizer.ArrayController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #1E293B; -fx-border-color: #38BDF8; -fx-border-width: 0 0 2 0;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Button onAction="#onBackClick" style="-fx-background-color: transparent; -fx-text-fill: #94A3B8; -fx-border-color: #94A3B8; -fx-border-radius: 5; -fx-cursor: hand;" text="â† BACK" />
                <Label text="Advanced Array Visualizer" textFill="#38BDF8">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
            </children>
        </HBox>
    </top>

    <center>
        <Pane fx:id="visualPane" style="-fx-background-color: #0F172A;" />
    </center>

    <right>
        <VBox prefWidth="340.0" spacing="10.0" style="-fx-background-color: #1E293B; -fx-border-color: #334155; -fx-border-width: 0 0 0 1;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label text="Control Panel" textFill="#94A3B8">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>

                <Accordion>
                    <panes>
                        <TitledPane animated="false" text="1. Create / Define">
                            <content>
                                <VBox spacing="10.0">
                                    <Label text="Capacity:" />
                                    <TextField fx:id="capacityField" promptText="e.g. 8" />
                                    <Label text="Initial Values (comma sep):" />
                                    <TextField fx:id="initialDataField" promptText="e.g. 10, 20, 30" />
                                    <Button maxWidth="Infinity" onAction="#btnCreateArray" text="Create Array" />
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="2. Insert Element">
                            <content>
                                <VBox spacing="10.0">
                                    <TextField fx:id="insertValueField" promptText="Value (e.g. 99)" />
                                    <Button maxWidth="Infinity" onAction="#btnAppend" text="Append (End)" />
                                    <Separator />
                                    <HBox spacing="5.0">
                                        <TextField fx:id="insertIndexField" prefWidth="80.0" promptText="Index" />
                                        <Button maxWidth="Infinity" onAction="#btnInsertAtIndex" text="Insert at Index" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="3. Remove Element">
                            <content>
                                <VBox spacing="10.0">
                                    <Button maxWidth="Infinity" onAction="#btnRemoveLast" text="Remove Last" />
                                    <Separator />
                                    <HBox spacing="5.0">
                                        <TextField fx:id="removeIndexField" prefWidth="80.0" promptText="Index" />
                                        <Button maxWidth="Infinity" onAction="#btnRemoveAtIndex" text="Remove at Index" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="4. Search &amp; Select">
                            <content>
                                <VBox spacing="10.0">
                                    <HBox spacing="10.0">
                                        <Button maxWidth="Infinity" onAction="#btnFindMin" text="Find Min" HBox.hgrow="ALWAYS" />
                                        <Button maxWidth="Infinity" onAction="#btnFindMax" text="Find Max" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                    <Separator />
                                    <HBox spacing="10.0">
                                        <TextField fx:id="searchValField" promptText="Value" HBox.hgrow="ALWAYS"/>
                                        <Button onAction="#btnLinearSearch" text="Linear Search" />
                                    </HBox>
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="5. Special Ops">
                            <content>
                                <VBox spacing="10.0">
                                    <Button maxWidth="Infinity" onAction="#btnRemoveDuplicates" text="Remove Duplicates" />
                                    <Separator />
                                    <HBox spacing="5.0">
                                        <TextField fx:id="countValField" prefWidth="80.0" promptText="Value" />
                                        <Button maxWidth="Infinity" onAction="#btnCountOccurrences" text="Count Occurrences" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                </VBox>
                            </content>
                        </TitledPane>
                    </panes>
                </Accordion>

                <Label text="Pseudocode Trace" textFill="#94A3B8">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <ListView fx:id="pseudoCodeList" prefHeight="150.0" style="-fx-control-inner-background: #0F172A; -fx-text-fill: white; -fx-font-family: 'Consolas';" />

                <Label text="Operation Log" textFill="#94A3B8">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
                <ListView fx:id="messageLogList" prefHeight="100.0" style="-fx-control-inner-background: #1E293B; -fx-text-fill: #F472B6;" />

            </children>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1E293B; -fx-border-color: #334155; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Label text="Speed:" textFill="#94A3B8" />
                <Slider fx:id="speedSlider" max="100.0" min="10.0" value="50.0" prefWidth="150.0" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="statusLabel" text="Ready..." textFill="#F472B6"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>